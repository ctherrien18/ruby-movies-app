<p id="notice"><%= notice %></p>

<link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css"/>
<script src="https://use.fontawesome.com/37d2cdd69d.js"></script>


<h1 class="centerTitle">Top Movies</h1>
<h3 class="centerTitle">Check out the movies all your friends are either saving or viewing!</h3>

    <div class="container gallery-container">
        <div class="tz-gallery">
            <div class="row">
                <% @sortedMovies.each do |movie| %>
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <%= link_to image_tag(movie.poster), movie, :class => 'lightbox' unless movie.poster.blank? %>
                            <div class="caption">
                                <h3><%= movie.title %></h3>
                                <p>Release: <%= movie.year %></p>
                                <p>Rating: <%= movie.appRating %></p>
                            </div>
                        </div>
                    </div> 
                <% end %>
            </div>
        </div>
    </div>
 
 <%= link_to 'Go Back to Search', root_path, :class=>"btn btn-default" %>
